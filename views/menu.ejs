<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
    <%- include('./partials/nav') %>
  <h1>Full Menu</h1>

  <h2>Mains</h2>
  <ul>
  <% menu.forEach((meal) => { %>
      <% if (meal.category === "mains") { %>
        <li><b><%= meal.name %></b>, <i>£<%= meal.price %></i>, Rating: <%= meal.rating %>, <br> <%= meal.details %></li>
      <% } %>
  <% }) %>
  </ul>

  <h2>Desserts</h2>
  <ul>
  <% menu.forEach((meal) => { %>
      <% if (meal.category === "desserts") { %>
          <li><b><%= meal.name %></b>, <i>£<%= meal.price %></i>, Rating: <%= meal.rating %>, <br> <%= meal.details %></li>
      <% } %>
  <% }) %>
  </ul>

  <h2>Sides</h2>
  <ul>
  <% menu.forEach((meal) => { %>
      <% if (meal.category === "sides") { %>
          <li><b><%= meal.name %></b>, <i>£<%= meal.price %></i>, Rating: <%= meal.rating %>, <br> <%= meal.details %></li>
      <% } %>
  <% }) %>
  </ul>

</body>
</html>
